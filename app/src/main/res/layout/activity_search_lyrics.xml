<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="player.music.com.unique.SearchLyrics"
    android:background="#000000">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button">
        <TextView android:text="Lyrics here" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewCode"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textIsSelectable="true"/>
    </ScrollView>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:gravity="top"
        android:hint="Enter Song Name"
        android:background="#ff6800"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search Lyrics"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:onClick="click"
        android:background="#34b3ff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
